[gd_resource type="Resource" load_steps=7 format=2]

[ext_resource path="res://Resources/CombatEffectObject/Skills/Skill.gd" type="Script" id=1]
[ext_resource path="res://Resources/AOE/AOE.gd" type="Script" id=2]
[ext_resource path="res://Resources/AOE/AOE_AreaType/AOE_Type_Circle.tres" type="Resource" id=3]

[sub_resource type="Resource" id=1]
script = ExtResource( 2 )
area_type = ExtResource( 3 )
area_size = 3
range_size = 3

[sub_resource type="GDScript" id=2]
script/source = "extends Resource
class_name Effect

enum DAMAGE_TYPE {
	PHYSICAL,
	MAGIC
}

enum AILMENT_MODE {
	ADD_RANDOM_STATE,
	ADD_EVERY_STATE,
	REMOVE_RANDOM_STATE,
	REMOVE_EVERY_STATE
}

export var nb_hits = 1
export var damage : int = 0
export var damage_variance : float = 0.0

export var damage_type : int = DAMAGE_TYPE.MAGIC

export var ailment_array : Array = []
export var ailment_mode : int = AILMENT_MODE.ADD_EVERY_STATE

func is_class(value: String): return value == \"Effect\" or .is_class(value)
func get_class() -> String: return \"Effect\"
"

[sub_resource type="Resource" id=3]
script = SubResource( 2 )
nb_hits = 1
damage = -50
damage_variance = 0.0
damage_type = 1
ailment_array = [  ]
ailment_mode = 1

[resource]
script = ExtResource( 1 )
name = "Heal"
description = "Heal every character for {amount} HP in a small a area."
aoe = SubResource( 1 )
positive = false
friendly_fire = true
caster_fire = true
effect = SubResource( 3 )
cost_type = 1
cost = 5
